@model Yms.Web.Models.RegisterMainViewModel
@{
    Layout = null;
}
<html>
<head>
    <title>Giriş Yap - YM'S</title>
    <link href="~/css/login/login.css" rel="stylesheet" />
    <link href="~/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="/img/login.jpg" alt="login" class="login-card-img">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <div class="brand-wrapper">
                                <img src="/img/logo.svg" alt="logo" class="logo">
                            </div>
                            <p class="login-card-description">Kayıt Ol</p>
                            <form method="post" action="@Url.Action("Register", "Account")">
                                @if (Model.IsCodeSend)
                                {
                                    <div class="alert alert-success">Aktivasyon Kodunuz Mailinize Gönderildi. <br />Lütfen Mailinizi Kontrol Ediniz !</div>
                                }
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Adı Soyadı" asp-for="DisplayName" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email Adresi" asp-for="Mail" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Telefon Numarası" asp-for="Phone" autocomplete="off">
                                </div>
                                <input name="login" id="login" class="btn btn-block login-btn mb-4" type="submit" value="Kayıt Ol">
                            </form>
                            <a href="#!" class="forgot-password-link">Parolamı Unuttum?</a>
                            <p class="login-card-footer-text">Zaten Hesabın Var Mı? <a asp-controller="Account" asp-action="Login" class="text-reset">Giriş Yap</a></p>
                            <nav class="login-card-footer-nav">
                                <a href="#!">Kullanım Koşulları</a>
                                <a href="#!">Gizlilik Politikası</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
